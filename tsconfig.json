{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "stripInternal": true,
    "declaration": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "outDir": "./dist",
    "lib": ["es2015", "dom"]
  },
  "paths": {
    "@angular/core": ["node_modules/@angular/core"],
    "vanilla-masker": ["node_modules/vanilla-masker"]
  },
  "files": [
    "./src/index.ts"
  ],
  "angularCompilerOptions": {
    "skipTemplateCodegen": true
  }
}